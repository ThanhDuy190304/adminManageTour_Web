<main id="checkProfile" class="pt-10 px-8">
    <div class="relative w-full h-full flex flex-col items-center">
        <div class="relative w-[120px] h-[120px] flex justify-center items-center mb-6">
            <img src="null" alt="Profile Picture"
                class="w-full h-full rounded-full shadow-lg object-cover" id="profilePicture">
            <img id="changePictureButton" src="/img/img_profile/pencil.png" alt="Edit Icon" class="absolute bottom-1 right-1 w-10 h-10 cursor-pointer">
        </div>
        <p class="text-2xl text-[#1C2B38] whitespace-nowrap overflow-hidden text-ellipsis">
            TADTravels </p>
        <div class="flex mt-3">
            <img src="/img/img_profile/Vector.jpg" alt="Location Icon" class="object-contain">
            <p class="text-sm ml-1">Ho Chi Minh</p>
            <p class="mx-1">|</p>
            <img src="/img/img_profile/fe_birthday-cake.jpg" alt="Birthday Icon" class="object-contain">
            <p class="text-sm ml-1">January 1</p>
        </div>
    </div>
    <div id="infoContainer"
            class="flex-[7] bg-white border border-green-900 overflow-auto max-h-[calc(100vh-80px)]">
        <section id="personInfo">
            <h4 class="text-lg mb-0">Personal Information</h4>
            <div class="content">
                <div class="field-label mb-4 mt-4">
                    <label for="name" class="block text-[#1C2B38] mb-2">Name:</label>
                    <input type="text" id="name" class="w-full bg-[#F4F4F5] p-4 pl-3 border-none rounded-md text-[#495560]"
                        value="{{name}}" />
                </div>
                <div class="field-label mb-4 mt-4">
                    <label for="dob" class="block text-[#1C2B38] mb-2">Date of Birth:</label>
                    <input type="text" id="dob" class="w-full bg-[#F4F4F5] p-4 pl-3 border-none rounded-md text-[#495560]"
                        value="{{dob}}" />
                </div>
                <div class="field-label mb-4 mt-4">
                    <label for="phone" class="block text-[#1C2B38] mb-2">Phone Number:</label>
                    <input type="text" id="phone" class="w-full bg-[#F4F4F5] p-4 pl-3 border-none rounded-md text-[#495560]"
                        value="{{phone}}" />
                </div>
                <div class="field-label mb-4 mt-4">
                    <label for="address" class="block text-[#1C2B38] mb-2">Address:</label>
                    <input type="text" id="address"
                        class="w-full bg-[#F4F4F5] p-4 pl-3 border-none rounded-md text-[#495560]" value="{{address}}" />
                </div>
            </div>
            <div class="save-container mt-5 mb-5 flex justify-start">
                <button id="savePersonButton"
                    class="w-[280px] py-2.5 px-5 bg-[#234d20] text-white text-lg rounded-md cursor-pointer transition-colors duration-300 ease-in-out hover:bg-green-400;">Save</button>
            </div>
        </section>
    </div>
    <div id="securityContainer"
            class="flex-[7] bg-white border border-green-900 overflow-auto max-h-[calc(100vh-80px)] mt-10">
        <section id="security">
            <h4 class="text-lg mb-0">Security</h4>
            <div class="content">
                <div class="field-label mb-4 mt-4">
                    <label for="email" class="block text-[#1C2B38] mb-2">Email:</label>
                    <input type="text" id="email" class="w-full bg-[#F4F4F5] p-4 pl-3 border-none rounded-md text-[#495560]"
                        value="{{email}}" />
                </div>
                <div class="field-label mb-4 mt-4">
                    <label for="password" class="block text-[#1C2B38] mb-2">Password:</label>
                    <input type="password" id="password"
                        class="w-full bg-[#F4F4F5] p-4 pl-3 border-none rounded-md text-[#495560]" value="{{password}}" />
                </div>
                <div class="field-label mb-4 mt-4">
                    <label for="confirmPassword" class="block text-[#1C2B38] mb-2">Confirm Password:</label>
                    <input type="password" id="confirmPassword"
                        class="w-full bg-[#F4F4F5] p-4 pl-3 border-none rounded-md text-[#495560]"
                        value="{{confirmPassword}}" />
                </div>
            </div>
            <div class="save-container mt-5 mb-5 flex justify-start">
                <button id="saveSecurityButton"
                    class="w-[280px] py-2.5 px-5 bg-[#234d20] text-white text-lg rounded-md cursor-pointer transition-colors duration-300 ease-in-out hover:bg-green-400;">Save</button>
            </div>

        </section>
    </div>
    <!-- Hộp thoại thay đổi ảnh với thiết kế đẹp -->
    <div id="uploadDialog" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-sm w-full">
            <h2 class="text-2xl font-semibold text-gray-700 mb-6 text-center">Change Profile Picture</h2>
            
            <!-- Nút Chọn ảnh -->
            <button id="selectPictureButton" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md mb-4 w-full">
                Choose Image
            </button>
            
            <!-- Input file cho việc chọn ảnh (ẩn đi) -->
            <input type="file" id="fileInput" accept="image/*" class="hidden" />
            
            <!-- Container ảnh preview -->
            <div id="previewContainer" class="flex justify-center mb-4">
                <img id="previewImage" class="w-32 h-32 rounded-full object-cover border-4 border-gray-300" />
            </div>

            <!-- Các nút Save và Cancel -->
            <div class="flex justify-between">
                <button id="saveButton" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-md w-full mr-2">
                    Save
                </button>
                <button id="cancelButton" class="bg-gray-400 hover:bg-gray-500 text-white px-6 py-2 rounded-md w-full">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</main>

<script src="/js/profile.js"></script>