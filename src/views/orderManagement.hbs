<section class="max-w-7xl mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4">Order Management</h2>

    <!-- Bộ lọc -->
    <div class="mb-4">
        <label for="statusFilter" class="mr-2">Filter by Status:</label>
        <select id="statusFilter" class="border rounded p-2">
            <option value="">All</option>
            <option value="reserved">Đã thanh toán</option>
            <option value="waiting">Chưa thanh toán</option>
        </select>

        <label for="sortByDate" class="ml-4 mr-2">Sort by Date:</label>
        <select id="sortByDate" class="border rounded p-2">
            <option value="asc">Oldest to Newest</option>
            <option value="desc">Newest to Oldest</option>
        </select>

        <button id="applyFilters" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded ml-4">Apply
            Filters</button>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full table-auto border-collapse">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left border-b">Reservation ID</th>
                    <th class="px-4 py-2 text-left border-b">Tourist Name</th>
                    <th class="px-4 py-2 text-left border-b">Tourist Contact</th>
                    <th class="px-4 py-2 text-left border-b">Reservation Date</th>
                    <th class="px-4 py-2 text-left border-b">Status</th>
                    <th class="px-4 py-2 text-left border-b">Detail</th>
                </tr>
            </thead>
            <tbody id="orderTableBody">
                <!-- Data rows will be inserted here dynamically -->
            </tbody>
        </table>
    </div>
</section>

<script src="/js/orderManagement.js"></script>