<section class="flex flex-row bg-white">
    <div class="bg-gray-800 text-white font-semibold p-2">
        <!-- Logo -->
        <div class="flex p-4">
            <img src="/images/logo.png" alt="logo" class="w-40" />
        </div>

        <!-- Sidebar Menu -->
        <div class="mt-4">
            <!-- Admin Info -->
            <div class="flex items-center p-5 mb-4 text-xl bg-gray-800 text-white rounded-lg">
                <div class="text-3xl mr-5">
                    <i class="bx bx-bell"></i>
                </div>
                <div class="flex flex-col">
                    <h4 class="text-lg font-semibold" id="user-name">
                        {{#if user}}
                        {{user.userName}}
                        {{else}}
                        Admin
                        {{/if}}
                    </h4>
                </div>
            </div>
            <!-- Navigation Links -->
            <div class="scrollable-container">
                <a href="/"
                    class="block p-5 mb-4 text-lg hover:bg-blue-700 rounded-lg focus:bg-blue-700 flex items-center">
                    <i class="fa fa-home mr-3 text-2xl"></i>
                    <span>Home</span>
                </a>
                <a href="/accountManagement"
                    class="block p-5 mb-4 text-lg hover:bg-blue-700 rounded-lg focus:bg-blue-700 flex items-center">
                    <i class="fa fa-user mr-3 text-2xl"></i>
                    <span>Account Management</span>
                </a>
                <a href="/tour-management"
                    class="block p-5 mb-4 text-lg hover:bg-blue-700 rounded-lg focus:bg-blue-700 flex items-center">
                    <i class="fa fa-hotel mr-3 text-2xl"></i>
                    <span>Tour Management</span>
                </a>
                <a href="/orderManagement"
                    class="block p-5 mb-4 text-lg hover:bg-blue-700 rounded-lg focus:bg-blue-700 flex items-center">
                    <i class="fa fa-box mr-3 text-2xl"></i>
                    <span>Order Management</span>
                </a>
                <a href="/reportByIncome"
                    class="block p-5 mb-4 text-lg hover:bg-blue-700 rounded-lg focus:bg-blue-700 flex items-center">
                    <i class="fa fa-chart-bar mr-3 text-2xl"></i>
                    <span>Reports</span>
                </a>
                <li>
                    <form action="/logout" method="POST">
                        <button type="submit">
                            <i class="fa fa-sign-out-alt mr-3 text-2xl"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>

            </div>

        </div>
</section>